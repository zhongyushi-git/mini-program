.container {
	padding: 80rpx 80rpx;
}

.content{
	position: relative; 
	top:50%;
}
.content .title{
	text-align: center;
	font-size: 55rpx;
	font-weight: bold;
	margin-bottom: 30px;
}

.uni-form-item {
	height: 50px;
	border-bottom: 1px solid #e3e3e3;
	display: flex;
	flex-direction: row;
	align-items: center;
}

.uni-form-item .uni-input {
	margin-left: 18px;
	font-size: 32rpx;
	height: 100% !important;
}


.btn-primary {
	 width:150vw;
	font-size: 36rpx;
	text-align: center;
	background-color: #007AFF !important;
	margin-top: 20px;
	color: #FFFFFF;
	border-radius: 10px;
}

.action-row {
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	float: right;
	margin-top: 10px;
	margin-right: 10px;
	font-size: 28rpx;
	color: #007AFF;
}